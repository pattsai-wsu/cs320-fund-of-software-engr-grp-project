@startuml
actor "User" as U
participant "Valid Data" as VD
participant "Requirment checking for specific input" as RC
participant "calculate" as Cal
activate U
U -> VD: "input"
activate VD
VD -> RC: "check validity" 
activate RC
RC -> Cal: "Calculate result"
activate Cal

alt pass
Cal --> U:"Return result"
else fail
RC --> VD:"Failed-input does not meet the requirements"
VD --> U:"Failed-invalid data"
end
@enduml
